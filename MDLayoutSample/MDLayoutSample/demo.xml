<View>
    <Resources>
	    <Stylesheet ref="styleRef.xml">
            <Style name="pageStyle">
                <Setter property="backgroundColor" value="#7F7F7F" />
            </Style>
	        <Style name="textHeaderStyle" target="">
	            <Setter property="textColor" value="#000000" />
                <Setter property="backgroundColor" value="green" />
	            <Setter property="font" value="SegoeUI-Bold 20" />
	        </Style>
	        <Style name="buttonStyle">
                <Setter property="titleforNormalState" value="on my g" />
                <Setter property="titleforSelectedState" value="click me" />
                <Setter property="selected" value="YES" />
	            <Setter property="layer.cornerRadius" value="2" />
	        </Style>
	        <Style name="textFieldStyle">
	            <Setter property="font" value="SegoeUI-Light 17" />
	            <Setter property="backgroundColor" value="#000000" />
	            <Setter property="textColor" value="#FFFFFF" />
	        </Style>
	    </Stylesheet>

	    <Data ref="">
            <DataItem key="" value=""/>
            <DataArray>
                <DataItem key="" value=""/>
                <DataItem key="" value=""/>
                <DataItem key="" value=""/>
            </DataArray>
	    </Data>
     </Resources>
    
    <Layout>
    	<DemoHostView id="containner" style="pageStyle">
    		<UILabel id="headerLable" textAlignment="1" text="hello" style="textHeaderStyle">
    			<Constraints>
    				<Constraint attribute="top" target="containner" relation="=" constant="100" id="top"/>
                    <Constraint attribute="left" target="containner" relation="=" constant="10" id="left"/>
                    <Constraint attribute="right" target="containner" relation="=" constant="-10" id="right"/>
    			</Constraints>
    		</UILabel>
            <UIButton id="centerButton" mdoutlet="YES" buttonType="UIButtonTypeCustom" clickAction="centerButton_click:" style="buttonStyle">
                <Constraints>
                    <Constraint attribute="width"  relation="=" target="containner" targetAttribute="width" multipliedBy="0.8" id="width"/>
                    <Constraint attribute="height"  relation="=" constant="200" id="height"/>
                    <Constraint attribute="center"  relation="=" target="containner" id="center"/>
                </Constraints>
            </UIButton>
            <UILabel text="bottom" textAlignment="1" style="bottomLableStyle">
                <Constraints>
                    <Constraint attribute="bottom" target="containner" relation="=" constant="-100" id="top"/>
                    <Constraint attribute="left" target="containner" relation="=" constant="10" id="left"/>
                    <Constraint attribute="right" target="containner" relation="=" constant="-10" id="right"/>
                </Constraints>
            </UILabel>
    	</DemoHostView>
    </Layout>
</View>