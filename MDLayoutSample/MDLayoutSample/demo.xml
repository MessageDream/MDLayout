<View>
    <Resources>
	    <Stylesheet ref="ref.xml">
	        <Style name="textHeaderStyle" target="UIButton">
	            <Setter property="textColor" value="#000000" />
	            <Setter property="font" value="SegoeUI-Bold 20" />
	        </Style>
	        <Style name="textBodyStyle">
	            <Setter property="textColor" value="#000000" />
	            <Setter property="font" value="SegoeUI-Light 17" />
	        </Style>
	        <Style name="pageStyle">
	            <Setter property="backgroundColor" value="#7F7F7F" />
	            <Setter property="layer.cornerRadius" value="2" />
	        </Style>
	        <Style name="buttonStyle">
	            <Setter property="backgroundColor" value="#000000" state="UIControlStateNormal" />
	            <Setter property="backgroundColor" value="#7F7F7F" state="UIControlStateHighlighted" />
	            <Setter property="textColor" value="#FFFFFF" />
	            <Setter property="cornerRadius" value="0" />
	            <Setter property="font" value="SegoeUI-Bold 17" />
	        </Style>
	        <Style name="textFieldStyle">
	            <Setter property="font" value="SegoeUI-Light 17" />
	            <Setter property="backgroundColor" value="#000000" />
	            <Setter property="textColor" value="#FFFFFF" />
	        </Style>
	    </Stylesheet>

	    <Data ref="">
            <DataItem key="" value=""/>
            <DataArray>
                <DataItem key="" value=""/>
                <DataItem key="" value=""/>
                <DataItem key="" value=""/>
            </DataArray>
	    </Data>
     </Resources>
    
    <Layout>
    	<DemoHostView id="containner" style="pageStyle">
    		<UILabel id="headerLable" text="hello" textColor="#7F7F7F" backgroundColor="#64F3f2" style="textBodyStyle">
    			<Constraints>
    				<Constraint attribute="edges" target="containner" relation="=" constant="150,50,10,50" id="left"/>
    			</Constraints>
    		</UILabel>
            <UIButton id="headerButton" mdoutlet="YES" titleforNormalState="你好" titleforSelectedState="扯淡" selected="YES" buttonType="UIButtonTypeCustom" clickAction="headerButton_click:" style="buttonStyle">
                <Constraints>
                    <Constraint attribute="width"  relation="=" target="containner" targetAttribute="width" multipliedBy="0.5" id="size"/>
                    <Constraint attribute="top"  relation="=" target="containner" constant="200" id="size"/>
                </Constraints>
            </UIButton>
    	</DemoHostView>
    </Layout>
</View>